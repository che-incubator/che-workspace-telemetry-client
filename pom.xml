<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.eclipse.che.incubator.workspace-telemetry</groupId>
  <artifactId>parent</artifactId>
  <version>0.0.32</version>
  <packaging>pom</packaging>
  <modules>
    <module>backend-base</module>
    <module>javascript</module>
  </modules>
  <properties>
    <repository-url>https://maven.pkg.github.com/che-incubator/che-workspace-telemetry-client</repository-url>
  </properties>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.eclipse.che.incubator.workspace-telemetry</groupId>
        <artifactId>backend-base</artifactId>
        <classifier>resources</classifier>
        <type>zip</type>
        <version>0.0.32</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <distributionManagement>
    <repository>
      <id>github</id>
      <url>${repository-url}</url>
    </repository>
  </distributionManagement>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-clean-plugin</artifactId>
          <version>3.1.0</version>
        </plugin>
        <plugin>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>3.0.1</version>
          <executions>
            <execution>
              <id>retrieve-api</id>
              <goals>
                <goal>unpack-dependencies</goal>
              </goals>
              <phase>generate-sources</phase>
              <configuration>
                <excludeTransitive>true</excludeTransitive>
                <outputDirectory>${project.build.directory}/api</outputDirectory>
                <classifier>resources</classifier>
                <type>zip</type>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>3.8.0</version>
          <configuration>
            <source>11</source>
            <target>11</target>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.openapitools</groupId>
          <artifactId>openapi-generator-maven-plugin</artifactId>
          <version>3.3.4</version>
          <configuration>
            <inputSpec>${project.build.directory}/api/openapi.yaml</inputSpec>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-resources-plugin</artifactId>
          <version>3.0.2</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
